<h1>Login</h1>
<%= form_with url: login_path do |form| %>
  <div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "john_doe@gmail.com" %>
  </div>
  <div class="mb-3">
    <%= form.label :email %>
    <%= form.password_field :password, class: "form-control", placeholder: "password" %>
  </div>
  <div class="mb-3">
    <%= form.submit "Login", disable_with: 'Logging in...', class: "btn btn-info" %>
  </div>
<% end %>
