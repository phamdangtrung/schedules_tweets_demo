<h1>Forgot your password</h1>
<%= form_with url: password_reset_path  do |form| %>
  <div class="mb-3">
    <%= form.label :email, "Email" %>
    <%= form.text_field :email, class: "form-control", placeholder: "john_doe@gmail.com" %>
  </div>
  <div class="mb-3">
    <%= form.submit "Reset password", disable_with: 'Resetting...', class: "btn btn-primary" %>
  </div>
<% end %>
