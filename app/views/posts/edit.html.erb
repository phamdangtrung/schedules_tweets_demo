<%= form_with model: @post do |form| %>
  <div class="row my-4">
    <div class="shadow sm:rounded-md sm:overflow-hidden">
      <div class="px-4 py-5 space-y-6 sm:p-6">
        <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">Editing Post</h1>
        <div class="mb-6">
          <label for="email" class="block mb-2 text-sm font-medium text-dark-900 dark:text-dark-300">Title</label>
          <%= form.text_field :title, class: "focus:ring-indigo-500 focus:border-indigo-500 flex-1 block w-full rounded-lg sm:text-sm border-gray-300", placeholder: "A good title", required: "true" %>
        </div>
        <div class="mb-6">
          <label for="text" class="block mb-2 text-sm font-medium text-dark-900 dark:text-dark-300">Category</label>
          <%= form.select :category_id, @categories.collect{ |category| [category.name, category.id]}, {}, class: "relative w-full bg-white border border-gray-300 rounded-md shadow-sm pl-3 pr-10 py-2 text-left cursor-default focus:outline-none focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>
        <div class="mb-6">
          <label for="text" class="block mb-2 text-sm font-medium text-dark-900 dark:text-dark-300">Content</label>
          <%= form.rich_text_area :body %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto px-2 sm:px-6 lg:px-8">
      <div class="relative flex items-center justify-between h-16">
        <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
        </div>
        <div class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-start">
        </div>
        <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
          <!-- Profile dropdown -->
          <div class="ml-3 relative">
            <button class="text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm py-2.5 text-center mr-2 mb-2 dark:bg-gray-600 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-700 dark:focus:ring-gray-800">
              <a class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-opacity-0" rel="nofollow" data-method="get" href="/posts">Cancel</a>
            </button>
            <button class="relative inline-flex items-center justify-center p-0.5 mb-2 mr-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-pink-500 to-orange-400 group-hover:from-pink-500 group-hover:to-orange-400 hover:text-white dark:text-white focus:ring-4 focus:ring-pink-200 dark:focus:ring-pink-800 shadow-lg shadow-indigo-500/50">
              <%= form.submit "Save", class: "relative px-5 py-2.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-opacity-0" %>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
